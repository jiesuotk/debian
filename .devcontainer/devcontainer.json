{
  "name": "Alist Static Build Dev",
  "dockerFile": "Dockerfile",

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],

  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "richardwillis.vscode-gradle"
      ]
    }
  },

  "postCreateCommand": "echo 'Devcontainer ready. Go + Node + pnpm installed.'",

  "remoteUser": "vscode"
}
